/* window switch */
super + d
    rofi -show window

/* playerctl stuff */
ctrl + f8
    playerctl previous

ctrl + f9
    playerctl next

ctrl + f10 
    playerctl play-pause

/* screenshots */
print 
    ~/dotfiles/scripts/screen.sh

alt + print 
    ~/dotfiles/scripts/screen.sh --screen

ctrl + delete
    ~/dotfiles/scripts/powermenu.sh

ctrl + print
    ~/dotfiles/scripts/figures.sh

ctrl + alt + shift + r 
    ~/dotfiles/scripts/record.sh

ctrl + alt + shift + g
    ~/dotfiles/scripts/gifrecord.sh

ctrl + alt + shift + k 
    ~/dotfiles/scripts/keys.sh

ctrl + super + shift + k 
    ~/dotfiles/scripts/keys.sh -g

ctrl + f5 
    sudo pkill -HUP swhkd

super + x
    cliphist list | rofi -dmenu -p "Delete Selected Entry: " | cliphist delete

super + v
    cliphist list | rofi -dmenu -p "Copy Selected Entry: " | cliphist decode | wl-copy

super + c 
    ~/Documents/university/scripts/setup.sh -r 

super + s
    ~/dotfiles/nvim/lua/snippets/localsnippets.sh
